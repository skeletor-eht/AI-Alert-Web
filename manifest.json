{
  "manifest_version": 3,
  "name": "AI Data Guard",
  "version": "1.1.1",
  "description": "Warn and block paste/uploads on AI sites.",
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://www.chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://perplexity.ai/*",
    "*://www.perplexity.ai/*",
    "*://midjourney.com/*",
    "*://copilot.microsoft.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      { "id": "ruleset_1", "enabled": true, "path": "rules.json" }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://www.chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://perplexity.ai/*",
        "*://www.perplexity.ai/*",
        "*://midjourney.com/*",
        "*://copilot.microsoft.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
